{
	"compilerOptions": {
		"sourceMap": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"declaration": true,
		"strict": true,
		"rootDir": "src",
		"target": "ES6",
		"outDir": "dist",
		"lib": ["ES2015", "DOM"],
		"skipLibCheck": true,
		"esModuleInterop": true,
		"noImplicitAny": false
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules", "OBLexer.d.ts", "PlSqlLexer.d.ts"],
}